@page
@model SubjectAddModel
@{
    ViewData["Title"] = "เพิ่มข้อมูลรายวิชา";
    Layout = "_LayoutAdmin";
}


<h2>เพิ่มข้อมูลรายวิชา</h2>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <!-- Alert Popup -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div id="alertBox" class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Form -->
            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="_Subject.Name" class="form-label">ชื่อรายวิชา</label>
                    <input asp-for="_Subject.Name" class="form-control" onchange="hideAlert()" />
                    <span asp-validation-for="_Subject.Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="_Subject.IsActive" class="form-label">สถานะการใช้งาน</label>
                    <select asp-for="_Subject.IsActive" class="form-control" onchange="hideAlert()">
                        <option value="true">ใช้งาน</option>
                        <option value="false">ไม่ใช้งาน</option>
                    </select>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success w-50">บันทึก</button>
                    <a asp-page="/Subjects/Index" class="btn btn-secondary w-50">ยกเลิก</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function hideAlert() {
            // ซ่อน Alert Popup
            const alertBox = document.getElementById('alertBox');
            if (alertBox) {
                alertBox.style.display = 'none';
            }
        }
    </script>
}



