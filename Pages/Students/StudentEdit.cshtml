@page
@model StudentEditModel
@{
    ViewData["Title"] = "แก้ไขข้อมูลนักเรียน";
    Layout = "_LayoutAdmin";
}


<h2>แก้ไขข้อมูลนักเรียน @Model._Student.UserName</h2>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Alert Popup -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div id="alertBox" class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Form -->
            <form method="post">
                <input asp-for="_Student.ID" class="form-control" hidden />
                <div class="form-group mb-3 d-flex gap-3 align-items-start">
                    <div class="flex-fill">
                        <label asp-for="_Student.UserId" class="form-label">ชื่อผู้ใช้งาน</label>
                        <input asp-for="_Student.UserId" class="form-control" oninput="hideAlert()" />
                        <span asp-validation-for="_Student.UserId" class="text-danger"></span>
                    </div>

                    <div class="flex-fill">
                        <label asp-for="_Student.Password" class="form-label">รหัสผ่าน</label>
                        <input asp-for="_Student.Password" class="form-control" oninput="hideAlert()" />
                        <span asp-validation-for="_Student.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3 d-flex gap-3 align-items-start">
                    <div class="flex-fill">
                        <label asp-for="_Student.UserName" class="form-label">ชื่อนักเรียน</label>
                        <input asp-for="_Student.UserName" class="form-control" oninput="hideAlert()" />
                        <span asp-validation-for="_Student.UserName" class="text-danger"></span>
                    </div>

                    <div class="flex-fill">
                        <label asp-for="_Student.Address" class="form-label">ที่อยู่</label>
                        <input asp-for="_Student.Address" class="form-control" oninput="hideAlert()" />
                        <span asp-validation-for="_Student.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="_Student.IsActive" class="form-label">สถานะการใช้งาน</label>
                    <select asp-for="_Student.IsActive" class="form-control" onchange="hideAlert()">
                        <option value="true">ใช้งาน</option>
                        <option value="false">ไม่ใช้งาน</option>
                    </select>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success w-50">บันทึก</button>
                    <a asp-page="/Students/Index" class="btn btn-secondary w-50">ยกเลิก</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function hideAlert() {
            // ซ่อน Alert Popup
            const alertBox = document.getElementById('alertBox');
            if (alertBox) {
                alertBox.style.display = 'none';
            }
        }
    </script>
}



