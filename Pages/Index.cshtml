@page
@model IndexModel
@{
    ViewData["Title"] = "เข้าสู่ระบบ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-6 col-12">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">เข้าสู่ระบบ</h2>

                    <!-- Alert Popup -->
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div id="alertBox" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i> <!-- Font Awesome icon for warning -->
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Login Form -->
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label">ผู้ใช้งาน</label>
                            <input asp-for="Username" class="form-control" oninput="hideAlert()" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">รหัสผ่าน</label>
                             <input asp-for="Password" type="password" class="form-control" oninput="hideAlert()" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-3">เข้าสู่ระบบ</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function hideAlert() {
            // ซ่อน Alert Popup
            const alertBox = document.getElementById('alertBox');
            if (alertBox) {
                alertBox.style.display = 'none';
            }
        }
    </script>
}
